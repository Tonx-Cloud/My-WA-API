{
  "name": "@my-wa-api/api",
  "version": "2.1.0",
  "description": "Backend API para automação WhatsApp",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "start:pm2": "pm2 start ../../config/ecosystem.config.json",
    "stop:pm2": "pm2 stop ../../config/ecosystem.config.json",
    "restart:pm2": "pm2 restart ../../config/ecosystem.config.json",
    "logs:pm2": "pm2 logs",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build concluído com sucesso!'",
    "lint": "echo 'ESLint temporarily disabled - TypeScript check via build'",
    "lint:fix": "echo 'ESLint temporarily disabled'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:performance": "jest tests/integration/performance.integration.test.ts",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:xai": "tsx tests/xai-test.ts",
    "examples:xai": "tsx examples/xai-examples.ts",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t my-wa-api .",
    "docker:run": "docker run -p 3000:3000 my-wa-api",
    "health": "curl -f http://localhost:3000/health || exit 1"
  },
  "dependencies": {
    "@sentry/node": "^9.43.0",
    "@sentry/profiling-node": "^9.43.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "qrcode": "^1.5.4",
    "socket.io": "^4.7.5",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0",
    "whatsapp-web.js": "^1.31.0",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.5.0",
    "@types/passport": "^1.0.16",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=20.17.0"
  }
}
